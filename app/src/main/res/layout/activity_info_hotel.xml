<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/train"
    tools:context="com.example.janbarus.jhotel_android_janhariandabarus.InfoHotelActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/namaHotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:gravity="left"
            android:text="Nama Hotel:"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/namaHotelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/namaHotel"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/idHotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/namaHotel"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:text="ID Hotel:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/idHotelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/namaHotel"
            android:layout_below="@id/namaHotelText"
            android:textColor="#000000"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/bintang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idHotel"
            android:layout_marginTop="20dp"
            android:text="Bintang: "
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/bintangText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="73dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/bintang"
            android:layout_below="@id/idHotelText"
            android:textColor="#000000"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/koorX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bintang"
            android:layout_marginTop="20dp"
            android:text="Koordinat X: "
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/koorXText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/koorX"
            android:layout_below="@id/bintangText"
            android:textColor="#000000"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/koorY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/koorX"
            android:layout_marginTop="20dp"
            android:text="Koordinat Y: "
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/koorYText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/koorY"
            android:layout_below="@id/koorXText"
            android:textColor="#000000"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/koorY"
            android:layout_marginTop="20dp"
            android:text="Deskripsi: "
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/descText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/desc"
            android:layout_below="@id/koorYText"
            android:textColor="#000000"
            android:text="TextView"
            android:textSize="18sp" />


        <Button
            android:id="@+id/gambar"
            android:layout_width="match_parent"
            android:layout_height="250dip"
            android:layout_below="@id/desc"
            android:layout_marginTop="20dp"
            android:background="@drawable/hotel"/>

    </RelativeLayout>


</ScrollView>
